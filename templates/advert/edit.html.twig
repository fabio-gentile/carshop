{% extends "base.html.twig" %}

{% block title %}Modification de l'annonce de {{ advert.seller.fullName }}{% endblock %}
{% form_theme myForm 'advert/_collection.html.twig' %}

{% block body %}
    <div class="container mt-5">
        <h1>Modification de l'annonce de <strong>{{ advert.seller.fullName }}</strong></h1>
        {{ form_start(myForm) }}
        {{ form_widget(myForm) }}
        <button type="submit" class="btn btn-warning mt-3">Modifier</button>
        {{ form_end(myForm) }}
    </div>
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('annonce') }}
{% endblock %}